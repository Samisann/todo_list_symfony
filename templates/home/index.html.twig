{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<style>
a{
  text-decoration: none;
}
</style>
    <div class="d-flex col-8 mx-auto flex-wrap justify-content-between py-3 mb-4 border-bottom">
      <div class="col-md-4">
        <h2>Mes tâches</h2>
      </div>
      <div >
        <a href="{{path('add_task') }}" class="d-flex text-danger font-bold no-underline"><div class="mx-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
  <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
  <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
</svg></div><h5>Ajouter une tâche</h5></a>
      </div>
    </div>
<div class="container mx-auto col-8">



    <div class="row">

  <table class="table table-responsive">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Statut</th>
      <th scope="col">Date de fin</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
 
    {% for task in tasks %}
    <tr>



        <td >

        {% if task.Illustration %}
        <img src="{{ asset('uploads/' ~ task.Illustration) }}" alt="" width="50" height="50" class="d-flex">
        {% endif %}

        {{ task.Title }}<br/>{{ task.Description }}</td>
      
        


      <td>{{ task.Status }}</td>
      <td>{{ task.Date | date('d/m/Y') }}</td>
      <td>
        <a href="{{ path('edit_task', {'id': task.id}) }}" class=""><i class="bi bi-pencil "></i></a>
        <a href="{{ path('delete_task', {'id': task.id}) }}" class=""><i class="bi bi-trash text-danger"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
    </div>


  



    <!-- /END THE FEATURETTES -->

  </div>

  
{% endblock %}
